# greet_with_name("Sherman")

def greet_with(name , location):
  print(f"Hello {name}")
  print(f"How are you doing at {location}?")

#greet_with("Sherman", "Singapore") #Positional Argument, if u swap the pos the result will be diff

#Keyword Argument 
greet_with(location = "Singapore", name = "Sherman") 
#Doesnt matter about the order as it is already tagged
# name = Sherman
#name is Parameter
#Sherman = Argument
